<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>todoapp</title>
  <script src="https://cdn.bootcss.com/jquery/1.11.0/jquery.js"></script>
  <link rel="stylesheet" href="assets/reset.min.css">
  <link rel="stylesheet" href="../assets/style.css">
</head>

<body>
  <header>
    <form>
      <input type="text" placeholder="Enter an activity.." name="item" id="item">
      <button type="submit" id="add">
        <!-- svg -->
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
          viewBox="0 0 16 16" style="enable-background:new 0 0 16 16;" xml:space="preserve">
          <g>
            <path class="fill"
              d="M16,8c0,0.5-0.5,1-1,1H9v6c0,0.5-0.5,1-1,1s-1-0.5-1-1V9H1C0.5,9,0,8.5,0,8s0.5-1,1-1h6V1c0-0.5,0.5-1,1-1s1,0.5,1,1v6h6C15.5,7,16,7.5,16,8z" />
          </g>
        </svg>
      </button>
    </form>
  </header>
  <div class="container">
    <!-- 未完成的列表 -->
    <ul class="todo" id="todo">
      <!-- 遍历传递过过来的这个数组 -->
      <% todos.forEach(function(todo){%>
      <li>
        <%= todo.item%>
        <div class="buttons">
          <button class="remove">
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px"
              y="0px" viewBox="0 0 22 22" style="enable-background:new 0 0 22 22;" xml:space="preserve">
              <rect class="noFill" width="22" height="22" />
              <g>
                <g>
                  <path class="fill"
                    d="M16.1,3.6h-1.9V3.3c0-1.3-1-2.3-2.3-2.3h-1.7C8.9,1,7.8,2,7.8,3.3v0.2H5.9c-1.3,0-2.3,1-2.3,2.3v1.3c0,0.5,0.4,0.9,0.9,1v10.5c0,1.3,1,2.3,2.3,2.3h8.5c1.3,0,2.3-1,2.3-2.3V8.2c0.5-0.1,0.9-0.5,0.9-1V5.9C18.4,4.6,17.4,3.6,16.1,3.6z M9.1,3.3c0-0.6,0.5-1.1,1.1-1.1h1.7c0.6,0,1.1,0.5,1.1,1.1v0.2H9.1V3.3z M16.3,18.7c0,0.6-0.5,1.1-1.1,1.1H6.7c-0.6,0-1.1-0.5-1.1-1.1V8.2h10.6V18.7z M17.2,7H4.8V5.9c0-0.6,0.5-1.1,1.1-1.1h10.2c0.6,0,1.1,0.5,1.1,1.1V7z" />
                </g>
                <g>
                  <g>
                    <path class="fill"
                      d="M11,18c-0.4,0-0.6-0.3-0.6-0.6v-6.8c0-0.4,0.3-0.6,0.6-0.6s0.6,0.3,0.6,0.6v6.8C11.6,17.7,11.4,18,11,18z" />
                  </g>
                  <g>
                    <path class="fill"
                      d="M8,18c-0.4,0-0.6-0.3-0.6-0.6v-6.8c0-0.4,0.3-0.6,0.6-0.6c0.4,0,0.6,0.3,0.6,0.6v6.8C8.7,17.7,8.4,18,8,18z" />
                  </g>
                  <g>
                    <path class="fill"
                      d="M14,18c-0.4,0-0.6-0.3-0.6-0.6v-6.8c0-0.4,0.3-0.6,0.6-0.6c0.4,0,0.6,0.3,0.6,0.6v6.8C14.6,17.7,14.3,18,14,18z" />
                  </g>
                </g>
              </g>
            </svg>
          </button>
          <!--完成按钮
          <button class="complete">
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px"
              y="0px" viewBox="0 0 22 22" style="enable-background:new 0 0 22 22;" xml:space="preserve">
              <rect y="0" class="noFill" width="22" height="22" />
              <g>
                <path class="fill"
                  d="M9.7,14.4L9.7,14.4c-0.2,0-0.4-0.1-0.5-0.2l-2.7-2.7c-0.3-0.3-0.3-0.8,0-1.1s0.8-0.3,1.1,0l2.1,2.1l4.8-4.8c0.3-0.3,0.8-0.3,1.1,0s0.3,0.8,0,1.1l-5.3,5.3C10.1,14.3,9.9,14.4,9.7,14.4z" />
              </g>
            </svg>
          </button>
        -->
      </li>
      <% });%>

    </ul>
    <!-- 完成的列表 -->
    <!--
    <ul class="todo" id="completed">
      <li></li>
    </ul>
  -->
  </div>

</body>
<script>
  $(document).ready(function () {
    //使用jQuery
    $('header').on('submit', function () {
      // 获取input中的值
      var item = $('form input');
      var todo = { item: item.val() };
      //判断内容是否为空
      if (todo.item == "") {
        alert('数据不能为空，请输入数据...');
        return;
      } else {
        //前端页面开始向后端发送请求 将获取到的input的输入值传递到后台
        //这里触发的方法是submit事件可以在地址栏看到传递的参数
        $.ajax({
          type: 'POST',
          url: '/todo',
          data: todo,
          success: function (data) {
            console.log(data);
            //coding.....
          }
        })
      }
    })
    //删除数据
    $('.remove').on('click', function () {
      //动态获取点击文本内容（整个的li）
      var item = $.trim($(this).parent().parent().text());
      //将数据传递到服务器中去
      //这里是click事件地址栏是看不到你要传递的值的所以到带值
      $.ajax({
        type: "DELETE",
        url: '/todo/' + item,
        success: function (data) {
          //接收来自后台的返回的数据
          //这里是有返回的数据 本地重新reload
          location.reload();
        }
      })
    })


  })
</script>

</html>