/* pages/musicList/musicList.wxss */
.music_top{
  display: flex;
  box-sizing: border-box;
  padding: 10rpx;
}
.music_top image{
  width: 100%;
  height: 60rpx;
}
.music_icon{
  flex: 1;
}
.music_name{
  padding-left: 20rpx;
  flex: 8;
}
.music_name image{
  width: 100%;
  height: 60rpx;
}
.music_status{
  flex: 1;
}
.songHeader{
  display: flex;
  align-items: center;
}
.song_pic{
  flex: 1;
}
.song_pic image{
  width: 100%;
  height: 180rpx;
}
.song_comment{
  flex: 2;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 28rpx;
}
.list{
  display: flex;
  border-bottom: 2rpx solid #eee;
  padding: 10rpx;
}
.list:nth-child(odd){
  background-color: #f5f5f5;
}
.list_index{
  flex: 1;
}
.list_detail{
  flex: 8;
}
.list_pic{
  flex: 1;
}
.list_pic image{
  width: 90rpx;
  height: 90rpx;
}